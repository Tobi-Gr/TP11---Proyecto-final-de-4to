<br>
<h2 id="titulo-busqueda" class="subtitulo">Resultados para "@ViewBag.busqueda"</h2>
    <div class="organizacion">
        @foreach(Pelicula item in ViewBag.resultados)
        {
            <div class="col-3 col-md-3">
                <div class="card">
                    <img src="@item.foto" alt="@item.titulo">
                    <h3 class="titulo-peli">@item.titulo</h3>
                            <div class="contenidoCard">
                                <button class="btn btn-primary masInfo" data-bs-toggle="modal" data-bs-target="#InfoModal" onclick="MostrarInfo(@item.idPelicula)">MÃ¡s info</button>
                                <label class="ui-bookmark">
                                    <input type="checkbox" onclick="Enlistar(@item.idPelicula, @ViewBag.idUsuario)">
                                    <div class="bookmark">
                                            <svg viewBox="0 0 32 32">
                                                <g>
                                                    <path d="M27 4v27a1 1 0 0 1-1.625.781L16 24.281l-9.375 7.5A1 1 0 0 1 5 31V4a4 4 0 0 1 4-4h14a4 4 0 0 1 4 4z"></path>
                                                </g>
                                            </svg>
                                    </div>
                                </label>
                    </div>
                </div>
            </div>
        }
        </div>


<div class="modal fade" id="InfoModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="titulo"></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <img id="portada-info">
                <div id="infoPeli"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>